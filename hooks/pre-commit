#!/bin/bash
#
# Pre-commit hook to enforce code formatting and unit tests
#
# This hook checks formatting with ruff and runs unit tests before allowing a commit.
# If either check fails, the commit will be blocked with a helpful message.

# Colors
GREEN='\033[0;32m'
RED='\033[0;31m'
YELLOW='\033[0;33m'
NC='\033[0m' # No Color

# Check if code is formatted with ruff
echo -ne "Checking code formatting... "
if ruff format --check . &> /dev/null; then
    echo -e "${GREEN}✓${NC}"
else
    echo -e "${RED}✗${NC}"
    echo ""
    echo -e "${RED}✗ Code formatting check failed${NC}"
    echo ""
    echo "Please run: ruff format ."
    echo ""
    echo "To skip this check (not recommended), use: git commit --no-verify"
    exit 1
fi

# Run pytest for unit tests only (excluding integration tests)
echo -e "${YELLOW}Running unit tests...${NC}"

if python3 -m pytest tests/ -v --ignore=tests/integration/ --tb=short; then
    echo -e "${GREEN}✓ All unit tests passed${NC}"
    exit 0
else
    echo ""
    echo -e "${RED}✗ Unit tests failed - please fix the failing tests before committing${NC}"
    echo ""
    echo "To skip this check (not recommended), use: git commit --no-verify"
    exit 1
fi
